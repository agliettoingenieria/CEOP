---
export interface Props {
	title: string;
}
const { title } = Astro.props as Props;
---

<article class="long-article">
	<h3>{title}</h3>
	<p><slot /></p>
</article>
<style>
	.long-article {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		width: 70%;
		height: 300px;
		border-radius: 12px;
		padding: 1.7rem;
		background-color: #ffffff;
		color: #000000;
	}
	h3 {
		color: #3f5ee7;
		font-weight: 500;
		font-size: 2rem;
		text-align: center;
	}
</style>
